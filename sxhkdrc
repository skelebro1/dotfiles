#dmenu
super + shift + d
	dmenu_run -i -nf '#cdd6f4' -nb '#1e1e2e' -sf '#1e1e2e' -sb '#89b4fa' -p 'search:' -fn 'hack:pixelsize=14'

#rofi
super + d
	rofi -show drun -theme $HOME/.config/bspwm/rofi/launcher.rasi

#reload sxhkd:
super + shift + r
	pkill -USR1 -x sxhkd

#Keyboard dependent
#super + shift + KP_Enter
#	thunar


